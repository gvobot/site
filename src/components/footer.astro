---
import { Icon } from "astro-icon";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://gvobot.app",
    description: "GVO's official website",
    icon: "mdi:home",
  },
  {
    url: "https://blog.gvobot.app",
    description: "GVO's official blog site",
    icon: "mdi:post",
  },
  {
    url: "/github",
    description: "View source on GitHub",
    icon: "mdi:github",
  },
  {
    url: "/chat",
    description: "Astro on Discord",
    icon: "fa-brands:discord",
  },
];
---

<footer class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40">
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
