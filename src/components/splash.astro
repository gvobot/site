---
import { Icon } from "astro-icon";
import Starfield from "~/components/starfield.astro";
import GitHubCorner from "./github-corner.astro";
---

<section class="relative h-full bg-black flex justify-center items-center">
  <Starfield />
  <GitHubCorner />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
  </div>
  <div class="relative text-center">
    <h2 class="flex flex-col gap-2">
      <Icon name="logomark" class="h-24 text-white md:h-32 mx-auto" />
      <div class="gradient-text font-extrabold tracking-tighter text-8xl">
        Keep The
        <br /> Vibes
        <br /> Good!
      </div>
    </h2>
  </div>
</section>


<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  @media (prefers-reduced-motion: reduce) {

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
